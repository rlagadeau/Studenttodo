<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvard"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N Street Village"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewAmountStuds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-03-14 10:00:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:gravity="right"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/buttonEditHours"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_btn_edit"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/buttonDeleteHours"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_btn_delete"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>